generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  MANAGER
  CHEF
  WAITER
}

enum OrderStatus {
  OPEN
  SENT
  PREPARING
  READY
  DELIVERED
  PAID
  CANCELLED
}

enum OrderItemStatus {
  PENDING
  SENT
  PREPARING
  READY
  DELIVERED
}

enum MenuItemType {
  FOOD
  DRINK
  DESSERT
  OTHER
}

enum ElementType {
  TABLE
  CHAIR
  SOFA
  DOOR
  WINDOW
}

model User {
  id        String   @id @default(cuid())
  username  String   @unique
  password  String
  name      String
  role      UserRole
  photo     String?
  phone     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  orders Order[]
}

model Floor {
  id        String   @id @default(cuid())
  name      String
  level     Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  rooms Room[]
}

model Room {
  id        String   @id @default(cuid())
  name      String
  floorId   String
  width     Float // in meters
  height    Float // in meters
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  floor    Floor         @relation(fields: [floorId], references: [id], onDelete: Cascade)
  elements RoomElement[]
  orders   Order[]
}

model RoomElement {
  id             String      @id @default(cuid())
  roomId         String
  type           ElementType
  x              Float // in meters
  y              Float // in meters
  width          Float // in meters
  height         Float // in meters
  rotation       Int         @default(0)
  tableCode      String? // only for tables
  seats          Int? // only for tables
  isRound        Boolean     @default(false) // only for tables
  swingDirection String? // only for doors: 'left' | 'right'
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt

  room   Room    @relation(fields: [roomId], references: [id], onDelete: Cascade)
  orders Order[]

  @@index([roomId])
  @@index([tableCode])
}

model Category {
  id        String   @id @default(cuid())
  name      String
  color     String   @default("#6366f1")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  menuItems MenuItem[]
}

model MenuItem {
  id              String       @id @default(cuid())
  name            String
  description     String?
  price           Float
  image           String?
  type            MenuItemType @default(FOOD)
  categoryId      String
  requiresKitchen Boolean      @default(true)
  inStock         Boolean      @default(true)
  quantity        Int? // null = unlimited
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt

  category   Category    @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  orderItems OrderItem[]

  @@index([categoryId])
}

model Order {
  id        String      @id @default(cuid())
  roomId    String
  tableId   String // RoomElement id (table)
  waiterId  String
  status    OrderStatus @default(OPEN)
  total     Float       @default(0)
  note      String?
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  paidAt    DateTime?

  room   Room        @relation(fields: [roomId], references: [id], onDelete: Cascade)
  table  RoomElement @relation(fields: [tableId], references: [id], onDelete: Cascade)
  waiter User        @relation(fields: [waiterId], references: [id])
  items  OrderItem[]

  @@index([roomId])
  @@index([tableId])
  @@index([waiterId])
  @@index([status])
}

model OrderItem {
  id         String          @id @default(cuid())
  orderId    String
  menuItemId String
  quantity   Int             @default(1)
  price      Float // price at time of order
  status     OrderItemStatus @default(PENDING)
  note       String?
  createdAt  DateTime        @default(now())
  updatedAt  DateTime        @updatedAt

  order    Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  menuItem MenuItem @relation(fields: [menuItemId], references: [id])

  @@index([orderId])
  @@index([menuItemId])
  @@index([status])
}

model Reservation {
  id            String   @id @default(cuid())
  roomId        String
  tableId       String
  customerName  String
  customerPhone String?
  guestCount    Int
  date          DateTime
  startTime     String // "HH:mm"
  endTime       String // "HH:mm"
  note          String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([roomId])
  @@index([tableId])
  @@index([date])
}
